@using ELearningPortalMSAzureV1.Resources
@model ELearningPortalMSAzureV1.Areas.Admin.ViewModels.AdminProfileViewModel

@{
    ViewData["Title"] = "Profile";

    Layout = "_AdminProfileLayout.cshtml";
}

<h2>Admin Profile</h2>

@if (Model.IsAdminProfileComplete)
{
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <img src="@Constants.DefaultImageNames.UserPhotoSrcPath@Model.AdminDetails.AdminImageFile.FileName" width="180px" height="180px" style="align-content:center" />
        <h2 style="text-align:left;color:cadetblue">@Model.Users.UserFullName.ToUpper()</h2>
    </div>
    <div class="row"></div>
    <div class="col-md-6">
        <div id="LearnerCityDetails" class="learnerProfile-Blocks row">
            <div class="col-md-3">
                <img src="~/Images/Learner/Location.png" width="100" height="100" />
            </div>
            <div class="col-md-9">
                <h4>Current City: @Model.AdminDetails.CurrentCity, @Model.AdminDetails.CurrentState</h4>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div id="LearnerQualification" class="learnerProfile-Blocks row">
            <div class="col-md-3">
                <img src="~/Images/Learner/Qualificaiton.png" width="100" height="100" />
            </div>
            <div class="col-md-9">
                <h4>Qualification: @Model.AdminDetails.HighestQualification</h4>
            </div>
        </div>
    </div>
        }
        else
        {
        <form class="form-horizontal" method="POST" enctype="multipart/form-data" asp-controller="Admin" asp-action="SaveAdminProfile">
            @Html.HiddenFor(x => x.Users.UserId)
            <fieldset>
                <div class="row"></div>
                <div class="col-md-6">
                    <div class="control-group">
                        <label class="control-label">Photo</label>
                        <div class="controls">
                            <input type="file" asp-for="AdminDetails.AdminImageFile" placeholder="" class="input-xlarge">
                            <p class="help-block">Upload your Photo</p>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Highest Qualification</label>
                        <div class="controls">
                            <input type="text" asp-for="AdminDetails.HighestQualification" placeholder="" class="input-xlarge">
                            <p class="help-block">Please enter the Highest Qualification</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="control-group">
                        <label class="control-label">Current City</label>
                        <div class="controls">
                            <input type="text" asp-for="AdminDetails.CurrentCity" placeholder="" class="input-xlarge">
                            <p class="help-block">Where are you currently staying</p>
                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label">Current State</label>
                        <div class="controls">
                            <input type="text" asp-for="AdminDetails.CurrentState" placeholder="" class="input-xlarge">
                            <p class="help-block">Please provide the Name of the state for your current city</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4"></div>
                <div class="control-group">
                    <div class="controls">
                        <input type="submit" class="btn btn-success" value="Update Profile">
                    </div>
                </div>
            </fieldset>
        </form>
        }
