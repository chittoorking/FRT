   <!DOCTYPE html>
    <html>
    <head>
        @Html.Partial("_HeadSection")
    </head>
    <body>
        <nav class="navbar navbar-inverse navbar-headerRow">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a asp-controller="Home" asp-action="Index" class="navbar-brand " style="color:red; font-size:20px ">Azure Cloud based E-Learning Platform</a>
                </div>
                <ul class="nav navbar-nav">
                    <li><a asp-controller="Home" asp-action="Index" style="color:blue; font-size:20px">Home</a></li>
                    <li><a asp-controller="Home" asp-action="Courses" style="color:blue; font-size:20px">Courses</a></li>
                    <li><a asp-controller="Home" asp-action="AboutUs" style="color:blue; font-size:20px">About Us</a></li>
                </ul>
                <form class="navbar-form navbar-left" method="POST" enctype="multipart/form-data" asp-controller="Home" asp-action="Courses">
                    <div class="input-group" style="padding-left:70px">
                        <input type="text" class="form-control" placeholder="Search Courses" name="search_Query">
                        <div class="input-group-btn">
                            <button class="btn btn-default" type="submit">
                                <i class="glyphicon glyphicon-search"></i>
                            </button>
                        </div>
                    </div>
                </form>

                <ul class="nav navbar-nav navbar-right">
                    <li><a asp-controller="Home" asp-action="Donate" style="color:blue; font-size:20px"><span></span>Donate</a></li>
                    <li><a asp-controller="Home" asp-action="Login" style="color:blue; font-size:20px"><span class="glyphicon glyphicon-user"></span>Log In</a></li>
                    <li><a asp-controller="Home" asp-action="SignUp" style="color:blue; font-size:20px"><span class="glyphicon glyphicon-plus-sign"></span>Sign Up</a></li>
                </ul>
            </div>
        </nav>
        
        <div>
            @RenderBody()
        </div>
        @Html.Partial("_FootSection")
        <script src="~/Scripts/HomeGuestScript.js"></script>
    </body>
</html>
